{
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "Project assignment",
              "weight": "bolder",
              "size": "large",
              "spacing": "None"
            },
            {
              "type": "TextBlock",
              "text": "Consultant name",
              "wrap": true
            },
            {
              "type": "Input.ChoiceSet",
              "id": "personName",
              "value": "{possiblePersons[0].name}",
              "choices": [
                {
                  "$data": "{possiblePersons}",
                  "title": "{name}",
                  "value": "{name}"
                }
              ]
            },
            {
              "type": "TextBlock",
              "text": "Client name",
              "wrap": true
            },
            {
              "type": "Input.Text",
              "id": "clientName",
              "value": "{possibleProjects[0].Client.Name}"
            },
            {
              "type": "TextBlock",
              "text": "Project name",
              "wrap": true
            },
            {
              "type": "Input.ChoiceSet",
              "id": "projectId",
              "value": "{possibleProjects[0].ProjectId}",
              "choices": [
                {
                  "$data": "{possibleProjects}",
                  "title": "{Name}",
                  "value": "{ProjectId}"
                }
              ]
            },
            {
              "type": "TextBlock",
              "text": "Role",
              "wrap": true
            },
            {
              "type": "Input.ChoiceSet",
              "id": "role",
              "choices": [
                {
                  "title": "Architect",
                  "value": "architect"
                },
                {
                  "title": "Designer",
                  "value": "designer"
                },
                {
                  "title": "Developer",
                  "value": "dev"
                },
                {
                  "title": "Project Manager",
                  "value": "pm"
                }
              ]
            }

          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "url": "{possibleProjects[0].Client.LogoUrl}",
              "size": "large"
            },
            {
              "type": "TextBlock",
              "text": "Forecast hours",
              "wrap": true
            },
            {
              "type": "Input.Text",
              "placeholder": "January 2021",
              "style": "text",
              "maxLength": 0,
              "id": "forecast0"
            },
            {
              "type": "Input.Text",
              "placeholder": "February 2021",
              "style": "text",
              "maxLength": 0,
              "id": "forecast1"
            },
            {
              "type": "Input.Text",
              "placeholder": "March 2021",
              "style": "text",
              "maxLength": 0,
              "id": "forecast2"
            }
          ],
          "width": "auto"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit",
      "data": {
        "msteams": {
          "type": "invoke",
          "value": {
            "submissionId": "AddToProjectSubmit"
          }
        }
      }
    }
  ]
}