{
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "text": "Project assignment"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "Consultant name",
              "wrap": true
            },
            {
              "type": "Input.Text",
              "id": "personName",
              "value": "{personName}"
            },
            {
              "type": "TextBlock",
              "text": "Client name",
              "wrap": true
            },
            {
              "type": "Input.Text",
              "id": "clientName",
              "value": "{possibleProjects[0].Client.Name}"
            },
            {
              "type": "TextBlock",
              "text": "Project name",
              "wrap": true
            },
            {
              "type": "Input.ChoiceSet",
              "id": "projectName",
              "value": "{possibleProjects[0].ProjectId}",
              "choices": [
                {
                  "$data": "{possibleProjects}",
                  "title": "{Name}",
                  "value": "{ProjectId}"
                }
              ]
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "url": "{possibleProjects[0].Client.LogoUrl}",
              "size": "medium"
            }
          ],
          "width": "auto"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit"
    }
  ]
}