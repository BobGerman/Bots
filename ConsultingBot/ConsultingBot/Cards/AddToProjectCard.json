{
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "text": "Project assignment"
    },
    {
      "type": "TextBlock",
      "text": "Consultant name",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "personName",
      "value": "{personName}"
    },
    {
      "type": "TextBlock",
      "text": "Client name",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "clientName",
      "value": "{project.Client.Name}"
    },
    {
      "type": "TextBlock",
      "text": "Project name",
      "wrap": true
    },
    {
      "type": "Input.ChoiceSet",
      "id": "projectName",
      "value": "{possibleProjects[0].ProjectId}",
      "choices": [
        {
          "$data": "{possibleProjects}",
          "title": "{Name}",
          "value": "{ProjectId}"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit"
    }
  ]
}