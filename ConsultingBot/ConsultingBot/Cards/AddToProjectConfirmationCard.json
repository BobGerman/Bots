{
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "text": "Project assignment confirmation",
      "weight": "bolder",
      "size": "large",
      "spacing": "None"
    },
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "Person assigned: ",
          "value": "{personName}"
        },
        {
          "title": "Role: ",
          "value": "{role}"
        },
        {
          "title": "Client: ",
          "value": "{clientName}"
        },
        {
          "title": "Project: ",
          "value": "{projectName}"
        },
        {
          "title": "{monthZero} forecast: ",
          "value": "{forecastZero}"
        },
        {
          "title": "{monthOne} forecast: ",
          "value": "{forecastOne}"
        },
        {
          "title": "{monthTwo} forecast: ",
          "value": "{forecastTwo}"
        }
      ]
    }
  ]
}